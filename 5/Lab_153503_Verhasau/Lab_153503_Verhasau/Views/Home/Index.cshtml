@{
    ViewBag.Title = "Index";
}
<h1>Лабораторная работа №1</h1>
<h2>Список</h2>
<ol type="A">
    <li>Элемент 1 списка</li>
    <li>Элемент 2 списка</li>
</ol>
<hr />
<h2>Форма</h2>
<form method="post">
    <div class="row mb-3">
        <div class="col-lg-4 ">
            <div class="form-check">
                <input id="check1" class="form-check-input" type="checkbox" name="check1" />
                <label for="check1" class="form-check-label">Чек-бокс 1</label>
            </div>
            <div class="form-check">
                <input id="check2" class="form-check-input" type="checkbox" name="check2" />
                <label for="check2" class="form-check-label">Чек-бокс 2</label>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="form-check-inline">
            <input id="radio1" class="form-check-input" type="radio" name="radio" value="1" />
            <label for="radio1">Радио-1</label>
        </div>
        <div class="form-check-inline">
            <input id="radio2" class="form-check-input" type="radio" name="radio" value="2" />
            <label for="radio2">Радио-2</label>
        </div>
        <div class="form-check-inline">
            <input id="radio3" class="form-check-input" type="radio" name="radio" value="3" />
            <label for="radio3">Радио-3</label>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="login" class="col-sm-2 col-form-label">Логин: </label>
        <div class="col-sm-10">
            <input id="login" class="form-control" type="text" placeholder="login" name="login" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="password" class="col-sm-2 col-form-label">Пароль: </label>
        <div class="col-sm-10">
            <input class="form-control" type="password" placeholder="password" name="password" id="password" />
        </div>
    </div>
    <input class="btn btn-primary mb-1" type="submit" />
</form>
