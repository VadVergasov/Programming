<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Lab1_2.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Lab1_2">

    <FlyoutItem Title="Calculator">
        <Tab>
            <ShellContent Title="Calculator"
                          ContentTemplate="{DataTemplate local:MainPage}"
                          Route="MainPage" />
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Progress Bar">
        <Tab>
            <ShellContent Title="Progress Bar"
                          ContentTemplate="{DataTemplate local:ProgressBar}"
                          Route="ProgressBar" />
        </Tab>
    </FlyoutItem>
</Shell>
