<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Lab.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Lab">

    <FlyoutItem Title="Calculator">
        <Tab>
            <ShellContent Title="Calculator"
                          ContentTemplate="{DataTemplate local:Lab1.MainPage}"
                          Route="MainPage" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Progress Bar">
        <Tab>
            <ShellContent Title="Progress Bar"
                          ContentTemplate="{DataTemplate local:Lab2.ProgressBar}"
                          Route="ProgressBar" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="SQLite Demo">
        <Tab>
            <ShellContent Title="SQLite Demo"
                          ContentTemplate="{DataTemplate local:Lab3.DBView}"
                          Route="SQLite Demo" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Converter">
        <Tab>
            <ShellContent Title="Converter"
                          ContentTemplate="{DataTemplate local:Lab4.Converter}"
                          Route="Converter" />
        </Tab>
    </FlyoutItem>
    
</Shell>
